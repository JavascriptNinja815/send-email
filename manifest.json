{
  "manifest_version": 2,
  "name": "SendEmail",
  "description": "Detect hidden input tag and send directly as HTML email",
  "version":"1.0",
  "content_scripts": [ {
    "matches": ["http://*/*", "https://*/*", "file:///*"], 
    "js": ["smtp.js", "content.js"]
  }],
  "author":"Krupp",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "browser_action": {
    "default_icon": "assets/logo.png",
    "default_title": "SendEmail",
    "default_popup": "popup.html"
  }
}